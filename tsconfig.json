{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "out",
		"lib": [
			"esnext"
		],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"resolveJsonModule": true
	},
	"include": [
		"src",
		"@types"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"out"
	]
}
