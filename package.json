{
	"name": "cssvar",
	"displayName": "CSSVar Autocomplete",
	"description": "Intellisense support for CSS Variables",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cssvar.restart",
		"onLanguage:css",
		"onLanguage:scss",
		"onLanguage:sass",
		"onLanguage:less"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cssvar.restart",
				"title": "Restart CSSVar"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/css": "^0.0.31",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"glob": "^7.1.6",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"mocha": "^8.3.2",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"css": "^3.0.0",
		"memoize-one": "^5.1.1",
		"polished": "^4.1.1"
	},
	"lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  }
}
