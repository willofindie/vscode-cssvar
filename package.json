{
	"name": "cssvar",
	"displayName": "CSS Var Complete",
	"keywords": [
		"css",
		"css3",
		"variable",
		"css variable",
		"css var",
		"cssvar",
		"autocomplete",
		"complete",
		"intellisense"
	],
	"description": "Intellisense support for CSS Variables",
	"version": "0.0.2",
	"publisher": "phoenisx",
	"license": "MIT",
	"homepage": "https://github.com/willofindie/vscode-cssvar",
	"bugs": {
		"url": "https://github.com/willofindie/vscode-cssvar/issues"
	},
	"repository": {
		"url": "https://github.com/willofindie/vscode-cssvar",
		"type": "git"
	},
	"icon": "img/icon.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:css",
		"onLanguage:scss",
		"onLanguage:sass",
		"onLanguage:less"
	],
	"main": "./out/extension.js",
	"preview": false,
	"contributes": {
		"configuration": {
			"title": "CSS Var Complete - An Autocompletion Intellisense tool for CSS Variables",
			"properties": {
				"cssvar.files": {
					"type": [
						"array",
						"null"
					],
					"default": null,
					"description": "CSS variable file relative/absolute paths to include for the Intellisense"
				},
				"cssvar.extensions": {
					"type": [
						"array",
						"null"
					],
					"default": null,
					"description": "File extensions to include"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "husky install",
		"vscode:prepublish": "yarn run compile",
		"pub": "vsce publish --yarn",
		"compile": "rollup -c --environment INCLUDE_DEPS,BUILD,NODE_ENV:production",
		"watch": "rollup -c -m -w",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@types/css": "^0.0.31",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"esbuild": "^0.10.2",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"glob": "^7.1.6",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"mocha": "^8.3.2",
		"prettier": "^2.2.1",
		"rollup": "^2.43.0",
		"rollup-plugin-esbuild": "^3.0.2",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"css": "^3.0.0",
		"memoize-one": "^5.1.1",
		"polished": "^4.1.1"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"npm run lint:fix"
		]
	}
}
